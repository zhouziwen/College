<resources xmlns:tools="http://schemas.android.com/tools"
    >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@mipmap/app_logo</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--SplashActivity 的theme-->
    <style name="AppSplash" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/app_logo</item>
    </style>

    <style name="weight_ver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="weight_hor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="life_head_title_lay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/def_10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="life_head_title_act_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/def_10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <style name="life_head_task_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/def_20dp</item>
    </style>

    <style name="life_head_task_iv">
        <item name="android:layout_width">@dimen/def_25dp</item>
        <item name="android:layout_height">@dimen/def_25dp</item>
        <item name="android:layout_margin">@dimen/def_10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="dividerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="dividerTitleBar" parent="dividerBase">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="imageViewDivider" parent="dividerBase">
        <item name="android:background">@color/white</item>
        <item name="android:src">@color/divider</item>
    </style>

    <style name="group_list_divider" parent="dividerBase">
        <item name="android:background">@color/divider</item>
    </style>


    <style name="user_icon_base">
        <item name="android:layout_width">@dimen/user_icon_diameter</item>
        <item name="android:layout_height">@dimen/user_icon_diameter</item>
    </style>

    <style name="user_icon" parent="user_icon_base">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/general_margin
        </item>
        <item name="android:layout_marginLeft">@dimen/general_margin_right_left</item>
        <item name="android:layout_marginRight">@dimen/general_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/general_margin
        </item>

    </style>

    <!--相对布局时的坐标原点-->
    <style name="anchor">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="group_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">@dimen/general_margin_right_left</item>
        <item name="android:background">@drawable/bg_add_group</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text">@string/group_add</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="group_item_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignTop">@id/sh_group_item_group_icon</item>
        <item name="android:layout_marginTop">@dimen/group_name_margin_top</item>
        <item name="android:layout_toEndOf" tools:targetApi="jelly_bean_mr1">
            @id/sh_group_item_group_icon
        </item>
        <item name="android:layout_toLeftOf">@id/sh_group_item_add</item>
        <item name="android:layout_toRightOf">@id/sh_group_item_group_icon</item>
        <item name="android:layout_toStartOf" tools:targetApi="jelly_bean_mr1">
            @id/sh_group_item_add
        </item>
        <item name="android:lines">1</item>
        <item name="android:text">@string/test_user_name</item>
        <item name="android:textColor">@color/main_tab_on</item>
        <item name="android:textSize">@dimen/font_size_15</item>
    </style>


    <style name="group_member_total">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@id/sh_group_item_group_icon</item>
        <item name="android:layout_marginBottom">@dimen/group_name_margin_bottom</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_toEndOf" tools:targetApi="jelly_bean_mr1">@id/sh_group_item_add
        </item>
        <item name="android:layout_toLeftOf">@id/sh_group_item_add</item>
        <item name="android:layout_toRightOf">@id/sh_group_item_group_icon</item>
        <item name="android:layout_toStartOf" tools:targetApi="jelly_bean_mr1">
            @id/sh_group_item_add
        </item>
        <item name="android:lines">1</item>
        <item name="android:text">本群共100人</item>
        <item name="android:textColor">@color/_999999</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="horizontal_slide" parent="android:Theme.Light.NoTitleBar">
    </style>


    <style name="edit_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/general_margin
        </item>
        <item name="android:layout_marginLeft">@dimen/general_margin</item>
        <item name="android:layout_marginRight">@dimen/general_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/general_margin
        </item>
        <item name="android:layout_marginTop">@dimen/general_margin</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:hint">@string/search</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="userHeadCommon">
        <item name="android:layout_width">@dimen/size_avatar</item>
        <item name="android:layout_height">@dimen/size_avatar</item>
        <item name="android:layout_marginLeft">@dimen/margin_chat_activity</item>
        <item name="android:src">@drawable/user_default_avatar</item>
    </style>

    <style name="chatUserHeadBase" parent="userHeadCommon">
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <!--聊天界面对方头像-->
    <style name="chatOppositeUserHead" parent="chatUserHeadBase">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
            @dimen/margin_chat_activity
        </item>
    </style>
    <!--聊天界面自己的头像-->
    <style name="chatSelfHead" parent="chatUserHeadBase">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/margin_chat_activity
        </item>
    </style>

    <!--通讯录顶部的header-->

    <style name="header_contact_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_invite_height</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/general_margin
        </item>
        <item name="android:background">@drawable/bg_selector_item_common</item>
        <item name="android:divider">@color/divider</item>
    </style>


    <!--==============环信的================-->
    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">@color/btn_gray_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_chat_time_stamp</item>
    </style>

    <style name="divider_line_eee">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">#eee</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <!--==============生活界面群组================-->

    <style name="group_act_detail_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="group_act_detail_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/_999999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">@dimen/def_8dp</item>
        <item name="android:layout_marginTop">@dimen/def_8dp</item>
    </style>

    <style name="offer_detail_lay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="offer_detail_iv">
        <item name="android:layout_width">@dimen/def_15dp</item>
        <item name="android:layout_height">@dimen/def_15dp</item>
    </style>

    <style name="offer_detail_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/def_10dp</item>
        <item name="android:textColor">#8000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text16" parent="text_base">
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="text_size_16_black_light" parent="text16">
        <item name="android:textColor">@color/font_black_light</item>
    </style>

    <style name="text_size_16_blue" parent="text16">
        <item name="android:textColor">@color/font_blue</item>
    </style>


    <style name="Loadingdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="friend_detail_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/general_margin_right_left</item>
        <item name="android:paddingRight">@dimen/general_margin_right_left</item>
        <item name="android:layout_marginTop">@dimen/general_margin</item>

    </style>


    <style name="friend_detail_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/right_arrow</item>
    </style>


    <style name="friend_detail_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/selector_login_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>
</resources>
