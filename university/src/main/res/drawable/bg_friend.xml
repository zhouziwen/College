<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/bg_friend_tab_border_radius"
                     android:bottomLeftRadius="@dimen/bg_friend_tab_border_radius"
                android:topRightRadius="0dp"
                />
            <stroke android:color="@color/main_tab_on" android:width="1dp"/>
        </shape>
    </item>

    <item android:state_pressed="true"  android:state_focused="true" android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/bg_friend_tab_border_radius"
                     android:bottomLeftRadius="@dimen/bg_friend_tab_border_radius"
                     android:topRightRadius="0dp"
                />
            <solid android:color="@color/main_tab_on"/>
        </shape>
    </item>

</selector>