<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/bg_selector_item_common"
                android:orientation="vertical">

    <View
        android:id="@+id/nearby_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:background="@color/main_tab_on"/>

    <com.zhiyou.colleageapp.appui.widget.CircleImageView
        android:id="@+id/person_nearby_item_imgV"
        android:layout_width="@dimen/user_icon_diameter"
        android:layout_height="@dimen/user_icon_diameter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="@dimen/general_margin"
        android:src="@drawable/test_person_01"
        app:border_color="@android:color/transparent"
        app:border_width="0dp"
        app:is_img="true"/>

    <TextView
        android:id="@+id/person_nearby_item_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nearby_anchor"
        android:layout_toRightOf="@+id/person_nearby_item_imgV"
        android:lines="1"
        android:maxLength="10"
        android:layout_marginBottom="4dp"
        android:text="蒂芬斯蒂芬"
        android:textColor="@color/_333333"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/person_nearby_item_person_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nearby_anchor"
        android:layout_toRightOf="@id/person_nearby_item_person_name"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/female"/>

    <TextView
        android:id="@+id/person_nearby_item_person_belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nearby_anchor"
        android:layout_toRightOf="@+id/person_nearby_item_imgV"
        android:lines="1"
        android:maxLength="10"
        android:layout_marginTop="4dp"
        android:text="@string/college"
        android:textColor="@color/_999999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/person_nearby_item_person_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/nearby_anchor"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/general_margin"
        android:lines="1"
        android:maxLength="15"
        android:paddingTop="2dp"
        android:text="1km | 5分钟前"
        android:textColor="@color/_CCCCCC"
        android:textSize="12sp"/>

</RelativeLayout>