<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/vote_item_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/life_play_img1"/>

    <RelativeLayout
        android:id="@+id/vote_item_bottom_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/vote_item_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#30000000"
        android:padding="@dimen/def_10dp">

        <RelativeLayout
            android:id="@+id/vote_item_bottom_lay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vote_item_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="兰兰"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12sp"/>

            <ImageView
                android:id="@+id/vote_item_choice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/life_play_select_shape3"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vote_item_bottom_lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vote_item_bottom_lay1"
            android:layout_marginTop="@dimen/def_5dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:background="@color/white">

                <View
                    android:id="@+id/vote_item_progress"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="@color/vote_1"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/vote_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12sp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>