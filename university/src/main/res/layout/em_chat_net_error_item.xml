<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@drawable/bg_selector_item_common"
              android:gravity="center_vertical"
              android:id="@+id/net_error_layout"
              android:visibility="gone"
              android:clickable="true">


    <ImageView
        android:id="@+id/iv_net_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:src="@drawable/em_login_error_icon"/>

    <TextView
        android:id="@+id/tv_connect_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:text="@string/unable_to_connect"
        android:textColor="@color/font_black"/>


</LinearLayout>