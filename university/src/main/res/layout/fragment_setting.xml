<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_fragment">


    <com.zhiyou.colleageapp.appui.widget.AppTitleBar
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        app:back_img="@drawable/fragment_back_arrow"
        app:bar_title="@string/setting"
        app:bar_title_text_color="@color/font_black"/>

    <Button
        android:id="@+id/setting_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="12dp"
        android:background="@drawable/em_btn_style_alert_dialog_special"
        android:text="@string/button_logout"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_16sp"/>
</RelativeLayout>