<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/general_margin"
    >

    <com.zhiyou.colleageapp.appui.widget.ContactItemView
        android:id="@+id/contact_item_dynamic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginBottom="@dimen/general_margin"
        android:background="@drawable/bg_selector_item_common"
        android:gravity="center_vertical"
        app:contactItemImage="@drawable/dynamic"
        app:contactItemName="@string/dynamic"/>

    <com.zhiyou.colleageapp.appui.widget.ContactItemView
        android:id="@+id/contact_item_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_below="@id/contact_item_dynamic"
        app:contactItemImage="@drawable/contacts"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/general_margin"
        android:background="@drawable/bg_selector_item_common"
        app:contactItemName="@string/contact"/>

</RelativeLayout>