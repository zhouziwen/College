<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingRight="@dimen/general_margin"
                android:paddingEnd="@dimen/general_margin"
                android:paddingLeft="@dimen/general_margin"
                android:paddingStart="@dimen/general_margin"
                android:background="@drawable/bg_selector_item_common">

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <com.zhiyou.colleageapp.appui.widget.CircleImageView
        android:id="@+id/list_item_group_avatar"
        style="@style/user_icon_base"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/general_margin"
        android:layout_marginEnd="@dimen/general_margin"
        android:src="@drawable/group"/>

    <TextView
        android:id="@+id/list_item_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/anchor"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/list_item_group_avatar"
        android:layout_toRightOf="@id/list_item_group_avatar"
        android:text="@string/contact"
        android:textColor="@color/_666666"
        android:textSize="@dimen/font_size_14"/>

    <TextView
        android:id="@+id/list_item_group_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/anchor"
        android:lines="1"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/list_item_group_avatar"
        android:layout_toRightOf="@id/list_item_group_avatar"
        android:text="@string/msg"
        android:textColor="@color/font_grey"
        android:textSize="@dimen/font_size_12sp"
        />
</RelativeLayout>