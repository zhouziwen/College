<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="wrap_content">

    <com.zhiyou.colleageapp.appui.widget.CircleImageView
        android:id="@+id/item_group_mem_avar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@mipmap/group_act_iv1"
        app:border_color="@android:color/transparent"
        app:border_width="0dp"
        app:is_img="true"/>

    <TextView
        android:id="@+id/item_group_mem_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_group_mem_avar"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/def_5dp"
        android:text="小明"
        android:textColor="@color/_999999"
        android:textSize="14sp"/>
</RelativeLayout>