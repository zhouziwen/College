<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">
    <RelativeLayout
        android:id="@+id/campus_sub_tab_strip_layout"
        android:layout_width="match_parent"
        android:layout_marginBottom="6dp"
        android:background="@color/white"
        android:layout_height="40dp">
        <com.zhiyou.colleageapp.appui.widget.PagerSlidingTabStrip
            android:id="@+id/campus_sub_tab_strip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/color_666666"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            app:pstsDividerColor="@android:color/transparent"
            app:pstsDividerPaddingTopBottom="8dp"
            app:pstsIndicatorColor="@color/main_tab_on"
            app:pstsIndicatorHeight="2dp"
            app:pstsScaleZoomMax="0.1"
            app:pstsShouldExpand="false"
            app:pstsSmoothScrollWhenClickTab="false"
            app:pstsTabPaddingLeftRight="15dp"
            app:pstsTextSelectedColor="@color/main_tab_on"
            app:pstsUnderlineColor="@android:color/transparent"
            app:pstsUnderlineHeight="1dp" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/campus_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/campus_sub_tab_strip_layout" />

</RelativeLayout>