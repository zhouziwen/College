<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/love_item_lay"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/ghostwhite"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_title_bar"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            style="@style/weight_ver"
            android:layout_weight="10">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>


        <TextView
            style="@style/weight_ver"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="某某某，我就是你的蛤蟆王子，跟我一起演绎现实版的童话故事吧！"
            android:textColor="#a000"
            android:textSize="@dimen/font_size_14"/>

        <RelativeLayout
            style="@style/weight_ver">

            <include layout="@layout/life_zan_comment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="2016-05-30"
                android:textColor="#6000"
                android:textSize="@dimen/font_size_12sp"/>
        </RelativeLayout>

        <LinearLayout
            style="@style/weight_ver"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/love_item_avar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/def_avatar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="爱吃猫的鱼"
                android:textColor="#8000"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
